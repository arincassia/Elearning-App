<!-- Courses Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Courses</h6>
            <h1 class="mb-5">Popular Courses</h1>
        </div>
        <div class="row g-4 justify-content-center">
            <!-- Iterar sobre los cursos populares -->
            <% cursosTop3.forEach((curso, index) => { %>
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="course-item bg-light h-100 d-flex flex-column">
                        <div class="position-relative overflow-hidden">
                            <!-- Imagen del curso -->
                            <img class="img-fluid" src="img/course-<%= (index % 3) + 1 %>.jpg" alt="">
                            <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                <a href="/curso/<%= curso.id %>" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Read More</a>
                                <a href="#" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">Join Now</a>
                            </div>
                        </div>
                        <div class="text-center p-4 pb-0 flex-grow-1">
                            <h3 class="mb-0">$<%= curso.precio %></h3>
                            <div class="mb-3">
                                <!-- Mostrar estrellas según la calificación -->
                                <% for (let i = 0; i < curso.estrellas; i++) { %>
                                    <small class="fa fa-star text-primary"></small>
                                <% } %>
                                <small>(<%= curso.estrellas %>)</small>
                            </div>
                            <h5 class="mb-4"><%= curso.nombre %></h5>
                        </div>
                        <!-- Mostrar el profesor del curso específico -->
                        <div class="d-flex border-top">
                            <small class="flex-fill text-center border-end py-2">
                                <i class="fa fa-user-tie text-primary me-2"></i><%= curso.profesor.nombre %>
                            </small>
                            <small class="flex-fill text-center border-end py-2">
                                <i class="fa fa-clock text-primary me-2"></i><%= curso.profesor.tiempo %>
                            </small>
                            <small class="flex-fill text-center py-2">
                                <i class="fa fa-user text-primary me-2"></i><%= curso.profesor.estudiantes %> Students
                            </small>
                        </div>
                    </div>
                </div>
            <% }); %>
            
        </div>
    </div>
</div>
<!-- Courses End -->
